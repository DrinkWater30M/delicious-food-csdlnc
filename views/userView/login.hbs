  <div class="cover">
    <div class="formDangNhap">
      <h1 style="color: white">Đăng Nhập</h1>
      <form id="login-form" method="post" action="/user/login">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label text-light"
            >Tài Khoản</label
          >
          <input
            class="form-control"
            id="username"
            name="username"
            aria-describedby="emailHelp"
          />
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label text-light"
            >Mật Khẩu</label
          >
          <input
            type="password"
            class="form-control"
            name="password"
            id="exampleInputPassword1"
          />
        </div>
        <div style="width: 100%; text-align: right; font-size:1rem; color: black">
          {{#with error}}<span>{{this}}</span>{{/with}}
        </div>
        <button
          type="submit"
          class="btn btn-light w-25"
          style="margin-left: 38%; text-decoration: none; color: black">
            Đăng Nhập
        </button>
        <a
          href="/user/register"
          style="color: white; display: flex; justify-content: end"
          >Đăng Ký tài khoản</a
        >
      </form>
    </div>
  </div>
