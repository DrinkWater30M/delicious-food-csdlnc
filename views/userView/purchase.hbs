<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/danhSachDonHang.css" />
    <!-- cdn bootstrap -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />
  </head>
  <body>
    <!-- HEADER -->
    <header class="header">
      <a href="/" class="logo">
        <i class="fas fa-shopping-basket"></i> groco
      </a>
      <nav class="navbar">
        <a href="/">home</a>
        <a href="/product/list?foodShop=&search=&page=1">products</a>
        <a href="/foodShop/list?search=&page=1">Food Shop</a>
        <a href="/user/purchase">all bill</a>
        <a href="#review">review</a>
        <a href="#blogs">blogs</a>
      </nav>

      <div class="icons">
        <a href="/user/shoppingcart">
          <div class="fas fa-shopping-cart" id="cart-btn"></div>
        </a>
        <a href="/user/profile">
          <div class="fas fa-user" id="login-btn"></div>
        </a>
        {{#if user}}
          <a href="#" onclick="document.getElementById('logout-form').submit()">
            <div class="fas fa-sign-out-alt" title="Logout"></div>
          </a>
          <span style="color: black; font-size: 1.2rem; text-transform: none">{{user.Username}}</span>
          <form id="logout-form" action="/user/logout" method="post"></form>
          </form>
        {{/if}}
      </div>
    </header>
    <!-- HEADER -->
    <!-- Body -->

    <div class="partner" style="margin: 150px">
      <div class="content-top">
        <h1 style="margin-left: 40px">danh sach don hang</h1>
        <div class="search">
          <form action="/user/purchase" method="get">
            <div class="from">
              <p style="margin-bottom: 5px;">tim kiem</p>
              <i class="fa-solid fa-magnifying-glass"></i>
              <input type="text" name="search"/>
              <button type="submit">Search</button>
            </div>
          </form>
        </div>
      </div>
      <div class="content">
        {{#each purchase}}
        <a href="/product/detail/{{this.MonID}}" class="product"></a>
        <div class="item">
          <div class="left">
            <img src={{this.LinkHinhAnh}} alt="purchase" />
            <div class="title">
              <h3>{{this.TenMon}}</h3>
              <p>Mã đơn hàng: <span class="billID">{{this.DonHangID}}</span></p>
              <p>Người nhận: {{this.NguoiNhan}}</p>
              <p>Số điện thoại: {{this.SDT}}</p>
              <p>Địa chỉ nhận hàng: {{this.DiaChiNhanHang}}</p>
              <p>Tên tài xế: {{#if this.HoTen}}{{this.HoTen}}{{else}}Chưa Nhận Đơn{{/if}} </p>
              <p>Biển số xe: {{#if this.BienSoXe}}{{this.BienSoXe}}{{else}}Chưa Nhận Đơn{{/if}} </p>
              <p>Số điện thoại: {{#if this.SoDienThoai}}{{this.SoDienThoai}}{{else}}Chưa Nhận Đơn{{/if}} </p>
            </div>
          </div>
          <div class="right-active">
            <p class="billStatus">{{this.TrangThai}}</p>
            <button class="removeBill">Hủy Đơn Hàng</button>
          </div>
        </div>
        {{/each}}
        <form id="removeBill" action="/user/purchase"  method="post">
          <input type="hidden" name="billID">
        </form>
      </div>
      <!--  -->

    </div>
    <!-- Body -->
    <!-- FOOTER -->
    <section class="footer">
      <div class="box-container">
        <div class="box">
          <h3>groco <i class="fas fa-shopping-basket"></i></h3>
          <p>
            Lorem ipsum dolor, sit amet consectetur adipisicing elit. Aliquam,
            saepe.
          </p>
          <div class="share">
            <a href="#" class="fab fa-facebook-f"></a>
            <a href="#" class="fab fa-twitter"></a>
            <a href="#" class="fab fa-instagram"></a>
            <a href="#" class="fab fa-linkedin"></a>
          </div>
        </div>

        <div class="box">
          <h3>contact info</h3>
          <a href="#" class="links">
            <i class="fas fa-phone"></i> +123-456-7890
          </a>
          <a href="#" class="links">
            <i class="fas fa-phone"></i> +111-222-3333
          </a>
          <a href="#" class="links">
            <i class="fas fa-envelope"></i> shaikhanas@gmail.com
          </a>
          <a href="#" class="links">
            <i class="fas fa-map-marker-alt"></i> mumbai, india - 400104
          </a>
        </div>

        <div class="box">
          <h3>quick links</h3>
          <a href="/" class="links">
            <i class="fas fa-arrow-right"></i> home
          </a>
          <a href="/product/list?foodShop=&search=&page=1" class="links">
            <i class="fas fa-arrow-right"></i> products
          </a>
          <a href="/foodShop/list?search=&page=1" class="links">
            <i class="fas fa-arrow-right"></i> Food Shop
          </a>
          <a href="/user/purchase" class="links">
            <i class="fas fa-arrow-right"></i> All Bill
          </a>
        </div>

        <div class="box">
          <h3>newsletter</h3>
          <p>subscribe for latest updates</p>
          <input type="email" placeholder="your email" class="email" />
          <input type="submit" value="subscribe" class="btn" />
          <img src="/img/banner-bg.webp" class="payment-img" alt="" />
        </div>
      </div>

      <div class="credit">
        created by <span> mr. web designer </span> | all rights reserved
      </div>
    </section>
  </body>
  <script>
    //remove bill
    const billList = document.querySelectorAll('.item');
    billList.forEach((item, index)=>{
      const removeBillButton = item.querySelector('.removeBill');
      const billStatus = item.querySelector('.billStatus');
      
      removeBillButton.addEventListener('click', ()=>{
        //bill in failure status
        if(billStatus.textContent.toLowerCase() != 'chờ nhận'){
          alert('Đơn hàng chỉ được hủy khi "Chờ Nhận", không thể hủy.');
          return;  
        }

        //cancel remove bill
        if(!confirm('Bạn muốn hủy đơn hàng này?')){
          return;
        }

        //remove bill
        const removeBillForm = document.getElementById('removeBill');
        const billIDInput = document.querySelector('input[name="billID"]');
        const billID = item.querySelector('.billID');
        //
        billIDInput.value = billID.textContent;
        removeBillForm.submit();
      })
    })
    
  </script>
</html>
