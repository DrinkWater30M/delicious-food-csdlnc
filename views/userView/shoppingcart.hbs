<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/gioHang.css" />
    <!-- cdn bootstrap -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />
  </head>
  <body>
    <!-- HEADER -->
    <header class="header">
      <a href="/" class="logo">
        <i class="fas fa-shopping-basket"></i> groco
      </a>
      <nav class="navbar">
        <a href="/">home</a>
        <a href="/product/list?foodShop=&search=&page=1">products</a>
        <a href="/foodShop/list?search=&page=1">Food Shop</a>
        <a href="/user/purchase">all bill</a>
        <a href="#review">review</a>
        <a href="#blogs">blogs</a>
      </nav>

      <div class="icons">
        <a href="/user/shoppingcart">
          <div class="fas fa-shopping-cart" id="cart-btn"></div>
        </a>
        <a href="/user/profile">
          <div class="fas fa-user" id="login-btn"></div>
        </a>
        {{#if user}}
          <a href="#" onclick="document.getElementById('logout-form').submit()">
            <div class="fas fa-sign-out-alt" title="Logout"></div>
          </a>
          <span style="color: black; font-size: 1.2rem; text-transform: none">{{user.Username}}</span>
          <form id="logout-form" action="/user/logout" method="post"></form>
          </form>
        {{/if}}
      </div>
    </header>
    <!-- HEADER -->
    <!-- Body -->
    <div class="cart">
      <h1 style="text-align: center; margin-bottom: 30px; font-size: 30px">
        Gio hang
      </h1>

     <table class="content-table" style="margin: 0 10%; width: 80%;">
        <thead>
          <tr>
            <th>STT</th>
            <th>Image</th>
            <th>Name</th>
            <th>Quality</th>
            <th>Price</th>
            <th>Setting</th>
          </tr>
        </thead>
        <tbody>
          <script>
              var stt = 1;
          </script>
          {{#each cart}}
          <tr>
            <td>
              <script>
                document.write(stt);
                stt += 1;
              </script>
            </td>
            <td>
              <img src={{this.LinkHinhAnh}} alt="food image" style="width: 100px; height: 100px; border-radius: 5px;">
            </td>
            <td>{{this.TenMon}}</td>
            <td>
            <input type="text" style="width: 30px;" value={{this.SoLuong}}>
            </td>
            <td>{{this.Gia}} </td>
             <td>
              <a href="/user/shoppingcart/delete/{{this.MonID}}" class="btn-xoa">Delete</a>
             </td>
          </tr>
         {{/each}}
        </tbody>
      </table>

      <div class="thanhToan">
        <p class="title" style="color: rgb(255, 85, 0);">Kiểm tra đơn hàng trước khi thanh toán</p>
        <a class="btn-thanhtoan" href="/user/thanhtoan">thanh toan</a>
      </div>

    <!-- Body -->
    <!-- FOOTER -->
